<Window x:Class="LinqAndForLoop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:uc="clr-namespace:LinqAndForLoop.UserControls"
        Title="LINQ and ForLoop" Height="250" Width="525">
    <Grid>
        <ScrollViewer>
            <DockPanel LastChildFill="True">
                <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Left">
                    <Button x:Name="btnRun" Width="100" Click="btnRun_Click" Margin="10, 10">Run</Button>
                </DockPanel>
                <StackPanel Margin="0, 10">
                    <uc:SortControl x:Name="ucLinq" Title="LINQ:" />
                    <uc:SortControl x:Name="ucForLoop" Title="For Loop:" />
                </StackPanel>
            </DockPanel>
        </ScrollViewer>
    </Grid>
</Window>
