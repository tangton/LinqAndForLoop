<UserControl x:Class="LinqAndForLoop.UserControls.SortControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinqAndForLoop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <DockPanel Margin="0, 10">
            <Label Width="120" DockPanel.Dock="Left" Content="{Binding Title}" />
            <ProgressBar x:Name="pbStatus" Margin="10, 0"></ProgressBar>
        </DockPanel>
        <StackPanel>
            <Label x:Name="lblResult" Margin="125, 0, 0, 0">Idle.</Label>
        </StackPanel>
    </StackPanel>
</UserControl>
